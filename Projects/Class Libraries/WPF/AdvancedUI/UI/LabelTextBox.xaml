<UserControl x:Class="AdvancedUI.LabelTextBox"
             x:Name="Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdvancedUI"
             mc:Ignorable="d">
    <StackPanel>
        <Label Content="{Binding Caption, ElementName=Control}" Margin="2 0 0 0"/>
        <TextBox Grid.Column="1" Text="{Binding Text, ElementName=Control}" HorizontalAlignment="Stretch" Margin="0 0 0 0"/>
    </StackPanel>
</UserControl>
